{
    "manifest_version":2,
    "name":"demo",
    "version":"1.0.1",
    "description":"A Chrome Demo",
    "icons":{
        "16":"img/icon.png",
        "48":"img/icon.png",
        "128":"img/icon.png"
    },
    "background":{
        "page":"background.html"
    },
	"permissions":[
		"contextMenus",
		"tabs", 
		"notifications",
		"webRequest", 
		"webRequestBlocking",
		"storage",
		"http://*/*", 
		"https://*/*"
	],
    "browser_action":{
        "default_icon":"img/icon.png",
        "default_title":"谷歌官方示例",
        "default_popup":"popup.html"
    }
}